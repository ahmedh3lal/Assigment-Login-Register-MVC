@model User
<style>
    header {
        display: none;
    }
</style>
@if (ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData.ModelState["Error"].Errors[0].ErrorMessage
    </div>
}
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">

                        <div class="col-12 col-lg-11 col-xl-10">
                            <div class="card-body p-3 p-md-4 p-xl-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-5">

                                            <h2 class="h4 text-center">Registration</h2>
                                        </div>
                                    </div>
                                </div>

                                <form method="post" enctype="multipart/form-data">

                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-controller="User" asp-for="Name" type="text" class="form-control" name="Name" id="firstName" placeholder="UserName" required>
                                            <label for="firstName" class="form-label">UserName</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-controller="User" asp-for="Email" type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                            <label for="email" class="form-label">Email</label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-controller="User" asp-for="Password" type="password" class="form-control" name="password" id="password" value="" placeholder="Password" required>
                                            <label for="password" class="form-label">Password</label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-controller="User" asp-for="RePassword" type="password" class="form-control" name="RePassword" id="RePassword" value="" placeholder="RePassword" required>
                                            <label for="password" class="form-label">Re_Password</label>
                                            <span asp-validation-for="RePassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-controller="User" asp-for="Admin" type="number" class="form-control" name="admin" id="admin" value="" placeholder="admin Or Not" required>
                                            <label for="admin" class="form-label">admin</label>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-outline-success" type="submit">Sign up</button>
                                        </div>
                                    </div>


                                </form>
                                <div class="row">
                                    <div class="col-12">
                                        <a type="button" class="btn btn-outline-info" asp-controller="Home" asp-action="Login">Sign up </a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
@section scripts
{
    <script>
        var loadfile =function(event){
            var reader=new FileReader();
            reader.onload=function()
            {
                var output = document.getElementById('output');
                output.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
